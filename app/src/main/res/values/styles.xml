        <item name="big">@dimen/add2_size_big</item>
        <item name="app_background_color">@color/day_color_bg</item>
        <item name="app_title_color">@color/day_color_title</item>
        <item name="context_text_color">@color/day_color_context_text</item>
        <item name="title_text_color">@color/day_color_title_text</item>
        <item name="app_contrast_color">@color/day_color_contrast</item>
        <item name="android:background">@color/day_color_bg</item>
    </style>
</resources>
