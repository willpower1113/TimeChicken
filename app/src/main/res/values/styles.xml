<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--夜间模式-->
    <style name="App_TextSize_Small_Night" parent="AppTheme">
        <item name="small">@dimen/default_small</item>
        <item name="middle">@dimen/default_center</item>
        <item name="big">@dimen/default_big</item>
        <item name="app_background_color">@color/night_color_bg</item>
        <item name="android:background">@color/night_color_bg</item>
        <item name="app_title_color">@color/night_color_title</item>
        <item name="title_text_color">@color/night_title_color_text</item>
        <item name="context_text_color">@color/night_context_color_text</item>
        <item name="app_contrast_color">@color/night_color_contrast</item>
    </style>
    <style name="App_TextSize_Middle_Night" parent="AppTheme">
        <item name="small">@dimen/add1_size_small</item>
        <item name="middle">@dimen/add1_size_center</item>
        <item name="big">@dimen/add1_size_big</item>
        <item name="app_background_color">@color/night_color_bg</item>
        <item name="app_title_color">@color/night_color_title</item>
        <item name="context_text_color">@color/night_context_color_text</item>
        <item name="title_text_color">@color/night_title_color_text</item>
        <item name="app_contrast_color">@color/night_color_contrast</item>
        <item name="android:background">@color/night_color_bg</item>
    </style>
    <style name="App_TextSize_Big_Night" parent="AppTheme">
        <item name="small">@dimen/add2_size_small</item>
        <item name="middle">@dimen/add2_size_center</item>
        <item name="big">@dimen/add2_size_big</item>
        <item name="app_background_color">@color/night_color_bg</item>
        <item name="app_title_color">@color/night_color_title</item>
        <item name="context_text_color">@color/night_context_color_text</item>
        <item name="title_text_color">@color/night_title_color_text</item>
        <item name="app_contrast_color">@color/night_color_contrast</item>
        <item name="android:background">@color/night_color_bg</item>
    </style>
    <!--白天模式-->
    <style name="App_TextSize_Small_Day" parent="AppTheme">
        <item name="small">@dimen/default_small</item>
        <item name="middle">@dimen/default_center</item>
        <item name="big">@dimen/default_big</item>
        <item name="app_background_color">@color/day_color_bg</item>
        <item name="app_title_color">@color/day_color_title</item>
        <item name="context_text_color">@color/day_color_context_text</item>
        <item name="title_text_color">@color/day_color_title_text</item>
        <item name="app_contrast_color">@color/day_color_contrast</item>
        <item name="android:background">@color/day_color_bg</item>
    </style>
    <style name="App_TextSize_Middle_Day" parent="AppTheme">
        <item name="small">@dimen/add1_size_small</item>
        <item name="middle">@dimen/add1_size_center</item>
        <item name="big">@dimen/add1_size_big</item>
        <item name="app_background_color">@color/day_color_bg</item>
        <item name="app_title_color">@color/day_color_title</item>
        <item name="context_text_color">@color/day_color_context_text</item>
        <item name="title_text_color">@color/day_color_title_text</item>
        <item name="app_contrast_color">@color/day_color_contrast</item>
        <item name="android:background">@color/day_color_bg</item>
    </style>
    <style name="App_TextSize_Big_Day" parent="App_TextSize_Small_Day">
        <item name="small">@dimen/add2_size_small</item>
