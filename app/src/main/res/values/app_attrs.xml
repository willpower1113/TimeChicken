<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppButton">
        <!--点击反馈模式（分两种）：1设置normalColor，selectColor 2.覆盖透明色，可设置覆盖的颜色和透明度-->
        <attr name="clickModel" format="enum">
            <enum name="change" value="1"/>
            <enum name="cover" value="2"/>
        </attr>
        <attr name="normalColor" format="color" />
        <attr name="selectColor" format="color" />
        <attr name="filletX" format="float" />
        <attr name="filletY" format="float" />
        <!--覆盖Color-->
        <attr name="coverColor" format="color" />
        <attr name="appStrokeColor" format="color" />
        <attr name="appStrokeWidth" format="float" />
        <attr name="appRadios" format="float" />
        <attr name="appShadowRadios" format="float" />
        <attr name="appNoShadow" format="boolean" />
        <!--阴影偏移量-->
        <attr name="appShadowOffsetX" format="float" />
        <attr name="appShadowOffsetY" format="float" />
        <attr name="appShadowColor" format="color" />
        <!--点击是否有波纹动画-->
        <attr name="appNoRipple" format="boolean" />
        <!--点击动画位置：1.down 2.up 3.afterClick-->
        <attr name="ripplePosition" format="enum">
            <enum name="down" value="1" />
            <enum name="up" value="2" />
        </attr>
        <attr name="appRippleColor" format="color" />
        <!--波纹动画时间-->
        <attr name="appRippleDuration" format="integer" />
        <attr name="appRippleAlpha" format="integer" />
    </declare-styleable>
</resources>