<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="?app_title_color"
    android:orientation="vertical">

    <com.willpower.timechicken.weight.AppRoundImageButton
        android:id="@+id/toolbar_back"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x15"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/x5"
        android:scaleType="centerInside"
        app:appNoRipple="true"
        app:appNoShadow="true"
        app:clickModel="cover"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x50"
        android:background="#00000000"
        android:textColor="?title_text_color"
        android:textSize="?middle" />

    <com.willpower.timechicken.weight.AppRoundImageButton
        android:id="@+id/toolbar_menu"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/x15"
        android:padding="@dimen/x5"
        android:visibility="gone"
        app:appNoShadow="true"
        app:clickModel="cover" />

    <TextView
        android:id="@+id/toolbar_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="@dimen/y5"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y5"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:text="标题"
        android:textColor="?title_text_color"
        android:textSize="?middle"
        android:visibility="gone" />
</FrameLayout>